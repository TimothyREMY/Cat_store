<section class="container-fluid bg-light">
  <div class="row">
    <div class="col-12">
      <div class="min-vh-100 text-center bg-light d-flex flex-column justify-content-center">
        <h2 class="display-5 fw-bold text-primary"> Le Cat-Alogue</h2>
        <h1 class="h3 mb-3 text-muted">Bienvenue</h1>
        <div class="container col-5">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :mot_de_passe %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
<br>
            <div class="actions">
              <%= f.submit "Nous rejoindre" %>
            </div>
          <% end %>
<br>
          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</section>
