<section class="jumbotron py-5 py-lg-10 text-center bg-light d-flex flex-column justify-content-center" >
  <div class="container pb-5">
    <div class="row justify-content-center col-md-12 pb-5">
      <div class="col-xl-6 col-lg-7 col-md-8 col-sm-10 text-center pt-5">
      <h5 class="text-light fw-light pt-5">Bienvenue sur le Cat-Alogue by THP </h5>
        <div class="pb-4"> 
          <h1 class="text-light font-weight-bold pt-3 fw-bold">Parcourez et achetez les photos des plus beaux chats de France</h1>  
        <% if user_signed_in? == false %>
          <%= link_to 'Se connecter', new_user_session_path, class: "btn btn-primary" %>
        <% end %>
        </div>      
      </div>
    </div>
  </div>
</section>

<div class="container">
  <h1>Les Stars du Cat-Alogue</h1>
  <div class="row">
    <% @stars.each do |item| %>
      <div class="col-md-4">
        <h2><%= item.title %></h2>
        <%= image_tag item.image_url, alt: "Photo de star", class: 'card-img-top' %>
        <img src="<%= item.image_url %>" class="card-img-top" alt="<% item.title%>">
        <p> <%= item.description %> </p>
        <p> <%= item.price %>€</p>
        <%= link_to "Accéder à la photo", item_path(item.id), class:"btn btn-warning" %>  
        <%= link_to "Ajouter au panier", item_selections_path(item), class:"btn btn-info", method:"POST" %>  
      </div>
      
    <% end %>
    
  </div>

  <hr>

</div>