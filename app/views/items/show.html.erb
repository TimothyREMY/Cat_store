
  <div class="row single-product mt-5 mb-5">
    <div class="col-md-6 offset-md-2">
      <div class="row">
            <div class="col-md-5 margin-b-30">
                <div class="item">
                      <img class="img-thumbnail img-responsive p-2" alt="photo de chat" src="<%= @items.image_url%>" />
                </div>
            </div>
            <div class="col-md-7">
                <div class="mx-5">
                    <h3 class="title pt-2"> <%= @items.title %></h3>
                    <span class="price"> <%= @items.price %> €</span>
                    <p class="mt-2"><%= @items.description %></p>
                    <div class="available mt-5">En stock</div>
                    <div class="add-buttons">
                        <a href="#" data-toggle="tooltip" data-placement="top" title="Add to cart" class="btn btn-success btn-lg mt-3"><i class="fa fa-shopping-cart"></i> Ajouter au panier</a>
                    </div>
                </div>
            </div>
      </div>
    </div>
 

<div class="text-center mt-5"><hr>
  <h2 class="section-heading">Produits similaires</h2>
  <section class="container card-group pb-5">
      
    <% @rand_items.each do |item| %> 
    
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col">

          <div class="card m-3 bg-white text-dark" style="width: 18rem;">
                          
            <img src="<%= item.image_url %>" class="card-img-top" alt="<% item.title%>">
            
            <!-- <img src="https://images-ext-1.discordapp.net/external/2dkSeg_r2Aj4f58DnU-LOfOLyIZfyMoTm9gYYNf_EUU/https/www.pkfoot.com/wp-content/uploads/2020/03/foot-anglais.jpg?width=1130&height=660" class="card-img-top" alt="..."> -->
            
              
            <div class="card-body text-center">
              
              <p class="card-text ">Son titre: <%= item.title%></p>
              <p class="card-text ">Sa description: <%= item.description%></p>
              <br/>
              <%= link_to "Accéder à la page de la photo", item_path(item.id), class:"btn btn-primary" %>
                            
            </div>
          </div>
        </div>
      </div>
      
    <% end %>
  </section>
</div>